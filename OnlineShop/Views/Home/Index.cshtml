@using OnlineShop.Models.DBModels
@model IEnumerable<Category>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Категории -->
<section>
    <div class="album py-5">
        <div class="container">
            <div class="row">
                @foreach (var category in Model)
                {

                    <div class="col" style="min-width: 400px; min-height: 400px; max-width: 400px; max-height: 400px;">
                        <a href="@Url.Action("Index", "Category", new { CategoryId = category.CategoryId })" style="text-decoration: none;">
                            <div class="card mb-4 box-shadow bg-dark">
                                <img class="card-img-top poster" src="@category.ImageUrl.ToString()" alt="@category.CategoryName" style="height: 300px;">
                                <div class="card-body">
                                    <p class="card-text text-white" style="font-weight:bold;">@category.CategoryName</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- Категории -->