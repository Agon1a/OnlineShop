@using OnlineShop.Models.DBModels
@model Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card mb-4 box-shadow bg-dark" style="width:100%">
                <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.ProductName" style="height: 300px;">
                <div class="card-body d-flex flex-column justify-content-center align-items-center">
                    <h5 class="card-title text-white">@Model.ProductName</h5>
                    <p class="card-text text-white" style="font-weight:bold;">@Model.Cost.ToString("0.00") &#8381;</p>
                    <p class="card-text text-white" style="font-weight:bold;">@Model.Description</p>

                    <!-- Добавляем кнопку "Заказать" из частичного представления OrderButton -->
                    <partial name="OrderButton" model="@Model.ProductId" />

                </div>
            </div>
        </div>
    </div>
</div>
